<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_action_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/kurv_list_icon" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/remove_kurv_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/fjern_varer_button" />

    <TextView
        android:text="TextView"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/kurv_list_icon"
        android:layout_toStartOf="@id/fjern_varer_button"
        android:id="@+id/vare_id_kurv_text" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kurv_list_icon"
        android:layout_toEndOf="@+id/kurv_list_icon"
        android:layout_toStartOf="@id/fjern_varer_button"
        android:id="@+id/vare_id_ekstraText" />


</RelativeLayout>