<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mau.resturantapp.aktivitys.mainFragments.userControls.userProfile_frag">

    <TextView
        android:textSize="30sp"
        android:text="@string/profile_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/headline"/>
    <TextView
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userProfile_email"
        android:layout_below="@id/headline"
        android:id="@+id/emailAddress_textview"/>
    <TextView
        android:textSize="16sp"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/emailAddress_textview"
        android:layout_alignStart="@id/emailAddress_textview"
        android:layout_alignBaseline="@id/emailAddress_textview"
        android:id="@+id/emailAddress_editText"/>
    <TextView
        android:textSize="16sp"
        android:text="@string/userProfile_name"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailAddress_textview"
        android:id="@+id/name_textview"/>
    <EditText
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/name_textview"
        android:layout_alignLeft="@id/name_textview"
        android:layout_alignStart="@id/name_textview"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:id="@+id/name_editText"/>
    <TextView
        android:text="@string/userProfile_phoneNumber"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/name_textview"
        android:id="@+id/phoneNumber_textview"/>
    <EditText
        android:textSize="16sp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/phoneNumber_textview"
        android:layout_marginLeft="120dp"
        android:layout_alignLeft="@id/phoneNumber_textview"
        android:layout_alignStart="@id/phoneNumber_textview"
        android:layout_marginStart="120dp"
        android:id="@+id/phoneNumber_edittext"/>
    <Button
        android:textSize="16sp"
        android:text="@string/userProfile_updateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumber_textview"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/updateProfile"/>
</RelativeLayout>
